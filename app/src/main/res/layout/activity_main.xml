<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/affirmation_label"
        android:id="@+id/affirmation_label"/>
    <TextView
        app:layout_constraintStart_toEndOf="@+id/affirmation_label"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/affirmation_time"/>

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/affirmation_label"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/visualization_label"
        android:id="@+id/visualization_label"/>
    <TextView
        app:layout_constraintStart_toEndOf="@+id/visualization_label"
        app:layout_constraintTop_toBottomOf="@+id/affirmation_time"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/visualization_time"/>

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/visualization_label"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/physical_label"
        android:id="@+id/physical_label"/>
    <TextView
        app:layout_constraintStart_toEndOf="@+id/physical_label"
        app:layout_constraintTop_toBottomOf="@+id/visualization_time"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/physical_time"/>

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/physical_label"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/reading_label"
        android:id="@+id/reading_label"/>
    <TextView
        app:layout_constraintStart_toEndOf="@+id/reading_label"
        app:layout_constraintTop_toBottomOf="@+id/physical_time"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/reading_time"/>

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reading_label"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/silence_label"
        android:id="@+id/silence_label"/>
    <TextView
        app:layout_constraintStart_toEndOf="@+id/silence_label"
        app:layout_constraintTop_toBottomOf="@+id/reading_time"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/silence_time"/>

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/silence_label"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/diary_label"
        android:id="@+id/diary_label"/>
    <TextView
        app:layout_constraintStart_toEndOf="@+id/diary_label"
        app:layout_constraintTop_toBottomOf="@+id/silence_time"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/diary_time"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/diary_label"
        android:text="@string/boost_button_lbl"
        android:id="@+id/boost_button"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boost_button"
        android:id="@+id/open_settings_button"
        android:text="@string/go_to_settings_btn_lbl"/>



</androidx.constraintlayout.widget.ConstraintLayout>